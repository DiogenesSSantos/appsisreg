<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_cfpsusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cpf ou Sus"
        android:enabled="true"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_buscar_e_substituir"
        app:helperText="Digite o sus ou cpf para buscar"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearance="@style/Widget.Material3.TextInputEditText.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_cpfOuSus"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="15"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_nomeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Nome"

        app:layout_constraintTop_toBottomOf="@id/tfl_cfpsusLayout"
        app:layout_constraintStart_toStartOf="@id/tfl_cfpsusLayout"
        app:layout_constraintWidth_percent="0.6">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_dataNascimentoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:hint="Data nascimento"
        app:layout_constraintStart_toEndOf="@id/tfl_nomeLayout"
        app:layout_constraintBottom_toBottomOf="@id/tfl_nomeLayout"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_dataNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:maxLines="1"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_cpfLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tfl_nomeLayout"
        app:layout_constraintStart_toStartOf="@id/tfl_nomeLayout"

        app:layout_constraintWidth_percent="0.4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_cpf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_nomeMaeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome da Mãe"
        android:layout_marginLeft="12dp"

        app:layout_constraintStart_toEndOf="@id/tfl_cpfLayout"
        app:layout_constraintTop_toTopOf="@id/tfl_cpfLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nomeMae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/tfl_barrioLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Bairro"
        app:layout_constraintTop_toBottomOf="@id/tfl_cpfLayout"
        app:layout_constraintStart_toStartOf="@id/tfl_cpfLayout"
        app:layout_constraintWidth_percent="0.4">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bairro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_motivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivo"
        android:layout_marginTop="12dp"
        android:textSize="34sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tfl_barrioLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/tv_motivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RadioGroup
            android:id="@+id/rdg_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"

            >
        <com.google.android.material.radiobutton.MaterialRadioButton
            app:useMaterialThemeColors="true"
            app:buttonTint="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Não localizado (Ligação , whatsapp ou busca ativa)."
            android:textSize="14sp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            app:useMaterialThemeColors="true"
            app:buttonTint="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Não tem interesse ou já fez."
            android:textSize="14sp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            app:useMaterialThemeColors="true"
            app:buttonTint="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marcado, confirmado, mas não veio retirar."
            android:textSize="14sp"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            app:useMaterialThemeColors="true"
            app:buttonTint="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devolução"
            android:textSize="14sp"/>
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enviar"
        android:textColorHint="@color/material_dynamic_neutral10"
        android:layout_margin="12dp"

        app:layout_constraintTop_toBottomOf="@id/card_radioGroup"
        app:layout_constraintStart_toStartOf="@id/card_radioGroup"
        app:layout_constraintEnd_toEndOf="@id/card_radioGroup"
        />

</androidx.constraintlayout.widget.ConstraintLayout>